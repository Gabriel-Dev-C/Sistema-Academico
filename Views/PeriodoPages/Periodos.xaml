<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaAcademico.Views.PeriodoPages.Periodos"
             Title="Períodos">

    <Grid
    Padding="15"
    RowSpacing="10"
    ColumnSpacing="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label 
        Text="PERÍODOS CADASTRADOS"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        HorizontalTextAlignment="Center"
        TextTransform="Default"
        FontSize="19"
        Margin="0,0,0,20"
        Grid.Row="0"
        Grid.Column="1"
        Grid.ColumnSpan="2"/>

        <Label
        x:Name="periodo1Nome"
        Text="Nome: Exemplo Período 1"
        Grid.Row="1"
        Grid.Column="0"/>

        <Label
        x:Name="periodo1Sigla"
        Text="Sigla: Exemplo Período 1"
        Grid.Row="1"
        Grid.Column="1"/>

        <Button
        Text="Editar"
        Clicked="EditPeriodo"
        BackgroundColor="Gray"
        TextColor="White"
        CornerRadius="0"
        Grid.Row="1"
        Grid.Column="2"/>

        <Button
        Text="Remover"
        Clicked="RemovePeriodo"
        BackgroundColor="Gray"
        TextColor="White"
        CornerRadius="0"
        Grid.Row="1"
        Grid.Column="3"/>

        <BoxView
        HeightRequest="1"
        BackgroundColor="Gray"
        HorizontalOptions="Fill"
        Margin="0,18,0,6"
        Grid.Row="2"
        Grid.ColumnSpan="4"/>

        <Button 
        Text="Adicionar Período"
        Clicked="CreatePeriodo"
        BackgroundColor="Gray"
        TextColor="White"
        Margin="15"
        Grid.Row="3"
        Grid.ColumnSpan="4"/>

    </Grid>

</ContentPage>