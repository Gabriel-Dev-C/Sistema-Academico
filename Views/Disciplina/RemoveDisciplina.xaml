<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaAcademico.Views.Disciplina.RemoveDisciplina"
             Title="Disciplinas -> Remover">

    <VerticalStackLayout
    Margin="0,10,0,0"
    Padding="10">

        <Label
         x:Name="lblTitle"
         Text="Tem certeza que deseja remover o cadastro dessa disciplina?"
         FontSize="Large"
         VerticalTextAlignment="Center"
         HorizontalTextAlignment="Center"
         Margin="0,0,0,20"/>

        <Button 
        Text="Remover"
        BackgroundColor="Gray"
        TextColor="White"
        Margin="20,0,20,20"/>

        <Button 
        Text="Cancelar"
        Clicked="VoltarDisciplina"
        BackgroundColor="Gray"
        TextColor="White"
        Margin="20,0,20,20"/>
      <!--ESQUERDA, TOPO, DIREITA, BAIXO-->

    </VerticalStackLayout>

</ContentPage>