<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaAcademico.Views.Disciplina.EditDisciplina"
             Title="Disciplinas -> Editar">

    <VerticalStackLayout
    Margin="0,10,0,0"
    Padding="10">

        <Label
     x:Name="lblTitle"
     Text="Editar Disciplina"
     FontSize="Large"
     VerticalTextAlignment="Center"
     HorizontalTextAlignment="Center"
     Margin="0,0,0,20"/>

        <Label
     x:Name="lblNomeDis"
     Text="Nome da Disciplina"
     Margin="0,0,0,5"/>

        <Entry
     x:Name="etrNomeDis"
     Placeholder="Digite aqui o novo nome da disciplina."
     BackgroundColor="White"
     Margin="0,0,0,20"/>

        <Label
     x:Name="lblSiglaDis"
     Text="Sigla da Disciplina"
     Margin="0,0,0,5"/>

        <Entry
     x:Name="etrSiglaDis"
     Placeholder="Digite aqui a nova sigla da disciplina."
     BackgroundColor="White"
     Margin="0,0,0,20"/>

        <Button 
    Text="Salvar"
    BackgroundColor="Gray"
    TextColor="White"
    Margin="20,0,20,20"/>

        <Button 
    Text="Voltar"
    Clicked="VoltarDisciplina"
    BackgroundColor="Gray"
    TextColor="White"
    Margin="20,0,20,20"/>
    <!--ESQUERDA, TOPO, DIREITA, BAIXO-->

    </VerticalStackLayout>

</ContentPage>