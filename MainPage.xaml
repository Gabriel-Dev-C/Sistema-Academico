<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaAcademico.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo_main.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Logo do Anchieta." />

            <Label
                Text="PÁGINA EM CONSTRUÇÃO."
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
